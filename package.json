{
  "name": "smart-house",
  "version": "1.0.0",
  "scripts": {
    "install-all": "npm install && cd back_end && npm install",
    "backend": "cd back_end && npm start",
    "frontend": "cd frontend && npx http-server -p 8081",
    "dev": "concurrently \"npm run backend\" \"npm run frontend\"",
    "start": "npm run install-all && npm run dev"
  },
  "devDependencies": {
    "concurrently": "^8.2.0",
    "http-server": "^14.1.1"
  }
}